html, body
	width: 100%
	height: 100%
	margin: 0
	padding :0

html, body, input
	font-family: 'Lato', sans-serif
	font-weight: 300
	font-size: 18px

h1, h2, h3, h4
	font-family: 'Montserrat', sans-serif
	font-weight: 300;
	font-size: 24px

h2
	font-size: 18px
	font-weight: 400

#container, #container2
	width: 928px
	margin: 0 auto 0 auto
	background-color: #F9F9F9
	min-height: 100%
	padding: 0px 0 66px 0

	#welcome
		width: 100%
		height: 470px
		background-image: url('/images/forest.svg')
		box-shadow: 0px 1px 3px rgba(0,0,0,.5)

		#intro
			float: left
			margin: 168px 0 0 66px

			h1, h2
				font-size: 28px
				color: white
				padding: 0
				margin: 0

		#create, #success
			float: right
			padding: 24px 24px 14px 24px
			background-color: white
			box-shadow: 0px 1px 4px rgba(0,0,0,.5)
			border-radius: 8px
			width: 232px

		#success
			margin: 145px 66px 0 0
			text-align: center
			display: none

		#create
			margin: 62px 66px 0 0

			h1
				margin: 0
				padding: 0
				font-size: 24px
				color: black
				padding-bottom: 3px
				border-bottom: 1px solid black

			form
				margin: 0
				padding: 0

				fieldset
					margin: 8px 0
					padding: 0
					border: 0
					text-align: center

					input
						font-size: 18px
						font-weight: 300
						margin: 4px 0
						height: 45px
						width: 100%
						border: 1px solid rgba(0,0,0,.10)
						border-radius: 8px
						padding: 11px 13px 12px 13px
						box-shadow: inset 1px 1px 1px rgba(0,0,0,.34)
					input[type='submit']
						font-weight: 400
						border: none
						box-shadow: none
						background-color: #379331
						color: white
					input[type='submit']:active
							background-color: #206D1B
					label
						font-size: 14px
						input[type='checkbox']
								width: auto
								height: auto
								margin-right: 10px

					.error
						margin: 0
						padding: 0 13px
						font-size: 12px
						color: rgb(128,0,0)
						display: none

	#description
		margin: 66px 66px 0px 66px

#container2
	background-color: white
	padding-top: 33px

	pre
		margin: 0 0 0 0
		background-color: rgba(0,0,0,.05)
		padding: 5px
		border: 1px solid rgba(0,0,0,.05)
		font-size: 14px
		overflow: auto;

	.right

	div
		clear: both
		margin-bottom: 100px 0

	#howto
		margin: 0 66px 0px 66px

.visible
	display: block !important

.invisible
	display: none !important

.small
	font-size: 11px
